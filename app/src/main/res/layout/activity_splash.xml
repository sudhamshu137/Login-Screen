<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEDA16"
    android:fitsSystemWindows="false"
    tools:context=".splash">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Lorem Ipsum"/>

        <com.agrawalsuneet.dotsloader.loaders.LazyLoader
            android:id="@+id/loader"
            android:layout_width="110dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginTop="30dp"
            app:lazyloader_animDur="500"
            app:lazyloader_dotsDist="15dp"
            app:lazyloader_dotsRadius="13dp"
            app:lazyloader_firstDelayDur="150"
            app:lazyloader_firstDotColor="#000000"
            app:lazyloader_interpolator="@android:anim/decelerate_interpolator"
            app:lazyloader_secondDelayDur="300"
            app:lazyloader_secondDotColor="#000000"
            app:lazyloader_thirdDotColor="#000000" />

    </LinearLayout>

</RelativeLayout>